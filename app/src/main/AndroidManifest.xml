<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="laboratorio.programacion.snake">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Snake">
        <activity
            android:name=".SnakeActivity"
            android:exported="true"
            android:theme= "@android:style/Theme.Holo.Light.NoActionBar.Fullscreen">
            <!-- Esta linea declara que el juego utilizará t.odo el espacio de la pantalla que el dispositivo pone a disposición sin menús adicionales -->

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>